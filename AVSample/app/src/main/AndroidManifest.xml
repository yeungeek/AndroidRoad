<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yeungeek.avsample">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AVSample">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.media.MediaPlayerActivity" />
        <activity android:name=".activities.media.MediaRecorderActivity" />
        <activity android:name=".activities.media.AudioRecordActivity" />
        <activity android:name=".activities.media.MediaMuxerActivity" />
        <activity android:name=".activities.media.PlayActivity" />
        <activity android:name="com.yeungeek.avsample.activities.opengl.book.first.FirstOpenGLActivity" />
        <activity android:name="com.yeungeek.avsample.activities.opengl.book.airhockey.AirHockeyActivity" />
        <activity android:name="com.yeungeek.avsample.activities.opengl.book.airhockey.AirHTextureActivity" />
        <activity android:name="com.yeungeek.avsample.activities.opengl.tutorial.oes.OpenGLOESActivity" />
    </application>

</manifest>